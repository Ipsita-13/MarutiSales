<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewPages.Account">

    <TextView
        android:id="@+id/edit_pro_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/edit_pro_txt"/>
    <EditText
        android:id="@+id/name_edt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Ipsita Mishra"
        app:layout_constraintTop_toBottomOf="@id/edit_pro_txt"
        android:layout_marginTop="40dp"/>
    <TextView
        android:id="@+id/phone_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/name_edt"/>
    <EditText
        android:id="@+id/phone_edt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Phone Number"
        app:layout_constraintTop_toBottomOf="@id/phone_txt"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/address_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/phone_edt"/>
    <EditText
        android:id="@+id/address_edt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Address"
        app:layout_constraintTop_toBottomOf="@id/address_txt"
        android:layout_marginTop="20dp"/>
    
    <com.google.android.material.button.MaterialButton
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/address_edt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Submit"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/submit"
            android:layout_marginTop="30dp"
            android:text="Your Orders"
            android:backgroundTint="#E91E63"/>
</androidx.constraintlayout.widget.ConstraintLayout>